<p id="notice"><%= notice %></p>

<h1><%= t('coins') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('coin_attributes.description') %></th>
      <th><%= t('coin_attributes.acronym') %></th>
      <th><%= t('coin_attributes.image') %></th>
      <th><%= t('coin_attributes.mining_type') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size:"25x25" %></td>
        <td><%= coin.mining_type.description %></td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new'), new_coin_path %>
